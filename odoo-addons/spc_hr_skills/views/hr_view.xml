<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="hr_employee_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherited_spc_hr_skills.resume</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='hr_settings']" position="before">
                    <page name="public" position="move"/>
                </xpath>
            </field>
        </record>

        <record id="update_skills_hr_employee_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherited_spc_hr_skills.resume</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_skills.hr_employee_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='resume_line_ids']" position="replace">
                    <field mode="tree" nolabel="1" name="resume_line_ids" widget="hr_resume">
                        <tree>
                            <field name="line_type_id"/>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration_experience"/>

                            <field name="display_type" invisible="1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

        <record id="update_resume_line_view_form" model="ir.ui.view">
            <field name="name">hr.resume.line.form.inherited_spc_hr_skills</field>
            <field name="model">hr.resume.line</field>
            <field name="inherit_id" ref="hr_skills.resume_line_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="duration_experience" force_save="1" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="current_comp_id" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='display_type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="date_end_rl" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='date_end_rl']" position="after">
                    <field name="current_comp_id" invisible="1" />
                </xpath>

                <!-- Add (university + diploma) fields after Type field (Education) -->
                <xpath expr="//field[@name='line_type_id']" position="after">
                    <field name="university_id" context="{
                                                'default_is_university': 'True',
                                                'form_view_ref': 'spc_hr_skills.update_res_partner_view_form_private_university'}"
                           options='{"always_reload": True, "highlight_first_line": True}'/>
                    <field name="diploma_id"/>
                </xpath>

                <!-- Add cursus field before date_start field (Education) -->
                <xpath expr="//field[@name='date_start']" position="before">
                    <field name="cursus"/>
                </xpath>

                <!-- Add attachment table -->
                <xpath expr="//form" position="inside">
                    <notebook>
                        <page name="job_description" string="Documents">
                            <field name="attachments_ids">
                                <tree>
                                    <field name="name" width="65" string="PiÃ¨ce jointe"/>
                                    <field name="lang_id" width="15"/>
                                    <field name="translated_document" width="10"/>
                                    <field name="legalized_document" width="10"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>

                <!-- Make university fields (invisible + required) when education type is selected -->
                <xpath expr="//field[@name='university_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('line_type_id','!=', %(hr_skills.resume_type_education)d)],
                        'required': [('line_type_id','=', %(hr_skills.resume_type_education)d)]}</attribute>
                </xpath>

                <!-- Make diploma fields (invisible + required) when education type is selected -->
                <xpath expr="//field[@name='diploma_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('line_type_id','!=', %(hr_skills.resume_type_education)d)],
                        'required': [('line_type_id','=', %(hr_skills.resume_type_education)d)]}</attribute>
                </xpath>

                <!-- Make cursus fields (invisible + required) when education type is selected -->
                <xpath expr="//field[@name='cursus']" position="attributes">
                    <attribute name="attrs">{'invisible': [('line_type_id','!=', %(hr_skills.resume_type_education)d)],
                        'required': [('line_type_id','=', %(hr_skills.resume_type_education)d)]}</attribute>
                </xpath>

            </field>
        </record>

        <record id="res_users_view_form" model="ir.ui.view">
            <field name="name">hr.user.preferences.form.inherited_spc_hr_skills.hr.skills</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="hr.res_users_view_form_profile" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="before">
                    <page name="public" position="move"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>