<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_res_config_settings_view_timbre_form" model="ir.ui.view">
            <field name="name">account.res.config.settings.view.timbre.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
              <xpath expr="//div[@data-string='Invoicing']/h2[3]" position="before">
	                <h2>Timbre Fiscal</h2>
	                <div class="row mt16 o_settings_container">
	                	<div class="col-12 col-lg-6 o_setting_box">
		                    <div class="o_setting_left_pane"/>
		                    <div class="o_setting_right_pane">
			                    <span class="o_form_label">Timbre Fiscal</span>
			                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
			                    <div class="text-muted">
			                    	Choisir la taxe de timbre fiscal
			                    </div>
		                    <div class="content-group">
		                    	<div class="row mt16">
		                    		<label for="account_tax_id" class="col-lg-3 o_light_label"/>
		                    		<field name="account_tax_id" domain="[('type_tax_use','=','sale')]"/>
		                    	</div>
		                    </div>
		                    <div class="content-group">
		                    	<div class="row mt16">
		                    		<label for="asc_account_purchase_tax_id" class="col-lg-3 o_light_label"/>
		                    		<field name="asc_account_purchase_tax_id" domain="[('type_tax_use','=','purchase')]"/>
		                    	</div>
		                    </div>
		             	</div>
		            </div>
		            <div class="col-12 col-lg-6 o_setting_box" title="Appliquer le timbre fiscal par défaut" groups="account.group_account_user">
                                <div class="o_setting_left_pane">
                                    <field name="applicate_in_timbre"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="applicate_in_timbre"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                        Appliquer le timbre fiscal par défaut sur les factures/Avoirs d'achat
                                    </div>
                                </div>
                                
                                <div class="o_setting_left_pane">
                                    <field name="applicate_out_timbre"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="applicate_out_timbre"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                        Appliquer le timbre fiscal par défaut sur les factures/Avoirs de vente
                                    </div>
                                </div>
                            </div>
                            
	            </div>
           	</xpath>    
            </field>
        </record>
    </data>
</odoo>