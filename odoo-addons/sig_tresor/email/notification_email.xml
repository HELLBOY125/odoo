<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- notification étape étude de forme du dossier  au demandeur-->
        <record id="verif_conformite_dossier_au_demandeur_notif" model="mail.template">
            <field name="name">Notif etude de forme au demandeur</field>
            <field name="email_from">${(user.company_id.email or'')|safe }</field>
            <field name="email_to">${(object.email or '')|safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Demande d'agrément : ${(object.denomination or '')|safe }</field>
            <field name="model_id" ref="model_sig_tresor_verif_conformite_dossier"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${user.company_id.lang}</field>
            <field name="body_html"><![CDATA[
            <p>Bonjour,</p>
            <br/>
            <p>Votre demande d'agrément a bien été enregistré et se trouve à présent à l'étape de la vérification de la forme </p>
            <br/>
            <p>Cordialement.</p>
            ]]></field>
        </record>

