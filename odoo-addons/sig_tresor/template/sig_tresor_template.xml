<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend" name="sig_tresor assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/sig_tresor/static/src/css/css_custom.css"/>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="web.assets_frontend" name="Website Assets">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/sig_tresor/static/src/css/css_custom.css"/>
        </xpath>
    </template>
</odoo>
