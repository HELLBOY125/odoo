<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="om_hr_payroll.report_payslip">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>BULLETIN DE PAIE</h2>
                        <p t-field="o.name"/>
                        <span t-esc="o.date_from" style="margin-left: 8px;"> </span> -
                        <span t-esc="o.date_to" style="margin-left: 8px;"> </span>
                        <table class="table table-sm table-bordered">
                            <tr>
                                <td>
                                    <strong>Matricule </strong>
                                </td>
                                <td>
                                    <span t-field="o.employee_id.matricule"/>
                                </td>

                                <td>
                                    <strong>CIN </strong>
                                </td>
                                <td>
                                    <span t-field="o.employee_id.identification_id"/>
                                </td>

                                <td>
                                    <strong>Qualification </strong>
                                </td>
                                <td>
                                    <span t-field="o.employee_id.job_id.name"/>
                                </td>

                                <td>
                                    <strong>Salaire de base</strong>
                                </td>
                                <td>
                                    <span t-esc="o.line_ids.filtered(lambda line: line.code == 'BASIC').total"
                                          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Addresse</strong>
                                </td>
                                <td colspan="5">
                                    <div t-field="o.employee_id.address_home_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </td>
                                <td>
                                    <strong>Compte bancaire</strong>
                                </td>
                                <td>
                                    <span t-field="o.employee_id.bank_account_ids.filtered(lambda line: line.active_account == True).acc_number"/>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <strong>Sit. Familiale</strong>
                                </td>
                                <td>
                                    <span t-esc="o.employee_id.marital"/>
                                </td>

                                <td>
                                    <strong>Chef de famille </strong>
                                </td>
                                <td>
                                    <span t-esc="o.employee_id.house_holder"/>
                                </td>

                                <td>
                                    <strong>Nbre. Enfants </strong>
                                </td>
                                <td style="padding: 8px;text-align: left;border-bottom: 1px solid #ddd;">
                                    <span t-esc="o.employee_id.children"/>
                                </td>

                                <td>
                                    <strong>Enfants infirmes </strong>
                                </td>
                                <td>
                                    <span t-esc="o.employee_id.infirme"/>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <strong>Enfants étudiants</strong>
                                </td>
                                <td>
                                    <span t-esc="o.employee_id.student"/>
                                </td>
                                <td>
                                    <strong>Date de naissance </strong></td>
                                <td>
                                    <span t-field="o.employee_id.birthday"/>
                                </td>
                                <td>
                                    <strong>Catégorie </strong>
                                </td>
                                <td>
                                    <span t-field="o.contract_id.category_id"/>
                                </td>
                                <td>
                                    <strong>Échelon </strong>
                                </td>
                                <td>
                                    <span t-field="o.contract_id.echelon_id"/>
                                </td>
                            </tr>
                        </table>

                        <table class="table table-sm" >
                            <thead>
                                <tr>
                                    <td>Libellé</td>
                                    <td>Taux</td>
                                    <td>Base</td>
                                    <td>Total</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip)" t-as="line">
                                    <t t-if="line.appears_on_payslip == True">
                                        <td style="text-align:left;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <span t-field="line.amount"
                                                  t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                        </td>
                                        <td style="text-align:right;">
                                            <span t-esc="line.total"
                                                  t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                        </td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
