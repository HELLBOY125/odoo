<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
     <!-- Type de médecin  -->

 
   
    <record model="ir.ui.view" id="view_res_partner_medecin_tree">
        <field name="name">res.partner.medecin.tree</field>
        <field name="model">res.partner.medecin</field>
        <field name="arch" type="xml">
            <tree string="Type médecin /vacataires">
                 <field name="name" />
                 <field name="type" />
            </tree>
        </field>
    </record>

    <record id="view_res_partner_kanban" model="ir.ui.view">
        <field name="name">res.partner.medecin.kanban</field>
        <field name="model">res.partner.medecin</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top ">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                
                            </div>
                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_res_partner_form">
        <field name="name">res.partner.medecin.form</field>
        <field name="model">res.partner.medecin</field>
        <field name="arch" type="xml">
            <form string="Type du médecin /vacataires">
	            <sheet>
	                <group>
	                  <group> 
	                        <field name="name" required="1"/>
	                        <field name="type" required="1"/>
	                    </group>
	                     </group> 
	            </sheet>
            </form>
        </field>
    </record>
    
    <record id="res_partner_medecin_action" model="ir.actions.act_window">
        <field name="name">Type du médecin / vacataires</field>
        <field name="res_model">res.partner.medecin</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    
 
            
            
      <menuitem
            id="menu_res_partner_medecin_root"
            name="Type du médecin / vacataires"
            action="res_partner_medecin_action"
            parent="contacts.res_partner_menu_config"
            sequence="2"/>                         

    </data>
</odoo>
    
    
  

