<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
        <!-- BS  -->

        <record model="ir.ui.view" id="view_account_ordonnance_tree">
            <field name="name">account.ordonnance.tree</field>
            <field name="model">account.ordonnance</field>
            <field name="arch" type="xml">
                <tree  string="Bulletin du soin" >
                    <field name="sequence" widget="handle" />
                    
                    <field name="ref_invoice" />
                    <field name="name" />
                    <field name="ordonnace_date" />
                    <field name="adherent_id" />
                    <field name="adherant_child_id" />
                    <field name="médecin" />
                    <field name="num_bs" />
                    <field name="amount_total" string='Total TTC' sum="Total"/>

                    <field name="disc_amount"  string='T.modérateur' sum="Total"/>
                    <field name="residu_amount" string='Reste' sum="Total Reste"/>
                    <field name="move_id" />
                    <field name="type" invisible="1"/>
                    <field name="type_process" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="state" />




                </tree>
            </field>
        </record>
        <record id="account_ordonnance_search_view" model="ir.ui.view">
            <field name="name">account.ordonnance.search</field>
            <field name="model">account.ordonnance</field>
            <field name="arch" type="xml">
                <search string="Local">
                     <field name="ref_invoice" />
                    <field name="name" string="Référence PEC"/>
                    <field name="num_bs" string="l.U."/>
                    <field name="ordonnace_date" />
                    <field name="adherent_id" />
                    <field name="adherant_child_id" />
                    <field name="médecin" />
                    <group expand="0" string="Grouper par...">
                       
                         <filter string="Réference facture" name="ref_invoice" domain="[]" context="{'group_by':'ref_invoice'}"/> 
                        <filter string="Adhérent" name="adherent_id" domain="[]" context="{'group_by':'adherent_id'}"/> 
                        <filter string="Médecin" name="médecin" domain="[]" context="{'group_by':'médecin'}"/>
                        <filter string="Status" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_account_ordonnance_kanban" model="ir.ui.view">
            <field name="name">account.ordonnance.kanban</field>
            <field name="model">account.ordonnance</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top ">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>

                                </div>
                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_ordonnance_form">
            <field name="name">account.ordonnance.form</field>
            <field name="model">account.ordonnance</field>
            <field name="arch" type="xml">
                <form string="Bulletin du soin" duplicate="0">
                    <style>
                        .text_value_color {color: red;}
                    </style>
                    <header>
                        <button name="confirm_bs" string="Confirmer BS" class="oe_highlight"
                                type="object"  attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                                <field name="ordonnace_date" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                                <!--                         <field name="adherent_id" domain="[('type_conventionne','=','physique')]" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>-->
                                <field name="adherent_id" domain="[('type_partner','=','conventionne'),('type_conventionne','=','physique'),('parent_id','=',False)]" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                                <field name="adherant_child_id" required="1" string="Bénéficiaire(Malade)"
                                       attrs="{'invisible': [('adherent_id', '=',False)],'readonly': [('state', '!=','draft')]}"
                                       options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="convention_id" readonly="1"/>
                                <field name="médecin" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                                <field name="num_bs" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>

                            </group>
                            <group>
                                <field name="ref_invoice" required="1"   attrs="{'readonly': [('state', '!=','draft')]}"/> 
                                <field name="move_id" readonly="1"/>
                                <field name="type" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_currency_id" invisible="1"/>
                                <field name="type_process" invisible="1"/>
                                
                            </group>

                        </group>
                        <notebook>
                            <page string="Lignes de bulletin de soin" >
                                <field name="line_ids"
                                       widget="section_and_note_one2many"
                                       mode="tree"
                                       attrs="{'readonly': [('state','!=','draft')] }">
                                    <tree string="Products" editable="bottom">
                                        <field name="product_id"  required="1" />

                                        <field name="description"/>
                                        <field name="note"/>
                                        <field name="quantity"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="product_uom_id" string="UoM" groups="uom.group_uom" optional="show" attrs="{'required': [('product_id', '!=', False)]}"/>
                                        <field name="price_unit" required="1"/>
                                        <field name="taxes_id" optional="show" widget="many2many_tags" domain="[('type_tax_use', '=', 'purchase'), ('company_id', '=', parent.company_id)]" options="{'no_create': True}"/>

                                        <field name="price_total"/>
                                        <field name="conformity_id" invisible="1" />
                                        <field name="parent_state"  invisible="1" />
                                        <button name="button_open" icon="fa-external-link"
                                                title="Contrôle médecin" style="color:blue" class="btn-lg"
                                                
                                                string="Contrôle médecin" type="object" help="Contrôle médecin" 
                                                attrs="{'invisible':[('parent_state','in',('draft','saisie'))]}" />
                                                 
                                    </tree>
                                    <form string="Products">
                                        <group>
                                            <field name="product_id"   required="1" />
                                            <field name="description"/>
                                            <field name="note"/>
                                            <field name="quantity"/>
                                            <field name="product_uom_category_id" invisible="1"/>
                                            <field name="product_uom_id" />
                                            <field name="taxes_id" widget="many2many_tags" domain="[('type_tax_use', '=', 'purchase'), ('company_id', '=', parent.company_id)]" options="{'no_create': True}"/>
                                            <field name="price_unit" required="1"/>
                                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                            <field name="price_subtotal" widget="monetary"/>
                                        </group>
                                    </form>
                                </field>
                                <group>

                                    <group class="oe_subtotal_footer oe_right"  >

                                        <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="disc_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <div class="oe_subtotal_footer_separator oe_inline">
                                            <label for="residu_amount"/>
                                        </div>
                                        <field name="residu_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="charge_adherant" readonly="1" class="text_value_color"/>
                                        <field name="charge_company" readonly="1" class="text_value_color" />
                                    </group>
                                </group>
                                <div class="oe_clear"/>
                            </page>

                            <page id="invoice_tab" string="lignes de BS" invisible="1">
                                <!-- attrs="{'invisible': [('bs_ids', '=', [])]}"> -->
                                <field name="bs_ids" readonly="1" >
                                    <tree editable="bottom" string="Bulletin lignes"
                                          decoration-danger="(status and status=='no_conforme')" decoration-success="status and status == 'conforme'">


                                        <!-- Displayed fields -->
                                        <field name="sequence" widget="handle"/>
                                        <field name="move_name" invisible="1"/>
                                        <field name="product_id" optional="show" />
                                        <field name="name" widget="section_and_note_text" />
                                        <field name="account_id" groups="account.group_account_user" />
                                        <field name="analytic_account_id"  groups="analytic.group_analytic_accounting" optional="show"/>
                                        <field name="analytic_tag_ids"  groups="analytic.group_analytic_tags" optional="show" widget="many2many_tags"/>
                                        <field name="quantity"/>
                                        <field name="product_uom_id" string="UoM" groups="uom.group_uom" optional="show"/>
                                        <field name="price_unit" string="Price"/>
                                        <field name="discount" string="Disc.%" groups="base.group_no_one" optional="show"/>
                                        <field name="tax_ids" widget="many2many_tags"   options="{'no_create': True}" optional="show"/>
                                        <field name="price_subtotal" string="Subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <field name="price_total" string="Total" groups="account.group_show_line_subtotals_tax_included"/>

                                        <!-- Others fields -->
                                        <field name="partner_id" invisible="1"/>
                                        <field name="amount_currency" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="debit" invisible="1"/>
                                        <field name="credit" invisible="1"/>
                                        <field name="date" invisible="1"/>
                                        <field name="date_maturity" invisible="1"/>
                                        <field name="tax_line_id" invisible="1"/>
                                        <field name="tax_repartition_line_id" invisible="1"/>
                                        <field name="tag_ids" invisible="1"/>
                                        <field name="tax_base_amount" invisible="1"/>
                                        <field name="tax_exigible" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="recompute_tax_line" invisible="1" force_save="1"/>
                                        <field name="display_type" force_save="1" invisible="1"/>
                                        <field name="is_rounding_line" invisible="1"/>
                                        <field name="exclude_from_invoice_tab" invisible="1"/>
                                        <field name="account_internal_type" invisible="1"/>
                                        <field name="always_set_currency_id" invisible="1"/>
                                        <field name="bs_id" invisible="1"/>
                                        <field name="is_controle" invisible="1" />
                                        <field name="status" readonly="1" />
                                        <button name="button_open" icon="fa-external-link"
                                                title="Contrôle médecin" style="color:blue" class="btn-lg"
                                                attrs="{'invisible':[('is_controle','=',False)]}"
                                                string="Contrôle médecin" type="object" help="Contrôle médecin" />
                                    </tree>
                                    <kanban class="o_kanban_mobile">
                                        <!-- Displayed fields -->
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <field name="price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        <field name="quantity"/>
                                        <field name="product_uom_id" groups="uom.group_uom"/>
                                        <field name="price_unit"/>
                                        <field name="display_type"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_card oe_kanban_global_click {{ record.display_type.raw_value ? 'o_is_' + record.display_type.raw_value : '' }}">
                                                    <t t-if="!record.display_type.raw_value">
                                                        <div class="row">
                                                            <div class="col-2">
                                                                <img t-att-src="kanban_image('product.product', 'image_128', record.product_id.raw_value)" t-att-title="record.product_id.value" t-att-alt="record.product_id.value" style="max-width: 100%;"/>
                                                            </div>
                                                            <div class="col-10">
                                                                <strong>
                                                                    <span>
                                                                        <t t-esc="record.product_id.value"/>
                                                                    </span>
                                                                </strong>
                                                                <div class="text-muted">
                                                                    Quantity:
                                                                    <t t-esc="record.quantity.value"/>
                                                                    <t t-esc="record.product_uom_id.value"/>
                                                                </div>
                                                                <div class="text-muted">
                                                                    Unit Price:
                                                                    <t t-esc="record.price_unit.value"/>
                                                                </div>
                                                                <strong>
                                                                    <span class="float-right text-right">
                                                                        <t t-esc="record.price_subtotal.value" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                                        <t t-esc="record.price_total.value" groups="account.group_show_line_subtotals_tax_included"/>
                                                                    </span>
                                                                </strong>
                                                            </div>
                                                        </div>
                                                    </t>
                                                    <t t-if="record.display_type.raw_value === 'line_section' || record.display_type.raw_value === 'line_note'">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <span>
                                                                    <t t-esc="record.name.value"/>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </div>
                                            </t>
                                        </templates>

                                        <!-- Others fields -->
                                        <field name="partner_id" invisible="1"/>
                                        <field name="amount_currency" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="debit" invisible="1"/>
                                        <field name="credit" invisible="1"/>
                                        <field name="date" invisible="1"/>
                                        <field name="date_maturity" invisible="1"/>

                                        <field name="tax_line_id" invisible="1"/>
                                        <field name="tax_repartition_line_id" invisible="1"/>
                                        <field name="tag_ids" invisible="1"/>
                                        <field name="tax_base_amount" invisible="1"/>
                                        <field name="tax_exigible" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="recompute_tax_line" invisible="1" force_save="1"/>
                                        <field name="display_type" force_save="1" invisible="1"/>
                                        <field name="is_rounding_line" invisible="1"/>
                                        <field name="exclude_from_invoice_tab" invisible="1"/>
                                        <field name="account_internal_type" invisible="1"/>
                                        <field name="always_set_currency_id" invisible="1"/>
                                    </kanban>
                                    <form>
                                        <sheet>
                                            <field name="display_type" invisible="1"/>
                                            <field name="parent_state" invisible="1"/>
                                            <group>
                                                <field name="partner_id" invisible="1"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="product_id" widget="many2one_barcode"/>
                                                <field name="quantity"/>
                                                <field name="product_uom_id" groups="uom.group_uom"/>
                                                <field name="price_unit"/>
                                                <field name="discount" groups="product.group_discount_per_so_line"/>
                                                <field name="currency_id" invisible="1"/>
                                                <field name="status" readonly="1" />
                                            </group>
                                            <group>
                                                <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" widget="many2many_tags"/>
                                                <field name="account_id" options="{'no_create': True}" domain="[('company_id', '=', company_id)]" attrs="{'readonly':[('parent_state','=','posted')]}"/>
                                                <field name="tax_ids" widget="many2many_tags"/>
                                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                            </group>
                                            <label for="name" string="Description" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                                            <label for="name" string="Section" attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                                            <label for="name" string="Note" attrs="{'invisible': [('display_type', '!=', 'line_note')]}"/>
                                            <field name="name" widget="text"/>
                                        </sheet>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer" >
                                    <field name="residu_amount" />
                                    <field name="disc_amount" />
                                    <field name="amount_total" class="oe_subtotal_footer_separator"/>

                                </group>
                            </page>
                            <page string="Piéce jointes">
                                <field name="attachment_ids" required="1" widget="many2many_binary"/>
                            </page>
                            <page string="Autre information">
                                <group>
                                    <group>

                                        <field name="request_date" readonly="1" />
                                        <field name="user_id" readonly="1" />
                                        <field name="company_id" invisible="1" />
                                    </group>
                                </group>
                            </page>

                        </notebook>


                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_ordonnance_action" model="ir.actions.act_window">
            <field name="name">Bulletin du soin</field>
            <field name="res_model">account.ordonnance</field>
            <field name="context">{'default_type_process':'bs'}</field>
            <field name="domain">[('type_process','=','bs')]</field>
            <field name="view_mode">tree,kanban,form</field>
           <field name="search_view_id" ref="account_ordonnance_search_view"/>
            
            <field name="view_ids"
                   eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_ordonnance_tree')}),
                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_account_ordonnance_kanban')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_account_ordonnance_form')})]"/>
        </record>
        
        
       




    </data>
</odoo>


