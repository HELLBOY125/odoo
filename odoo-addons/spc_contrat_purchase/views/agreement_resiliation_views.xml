<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
     <!-- Motif de resiliation  -->

    <record model="ir.ui.view" id="view_agreement_resiliation_tree">
        <field name="name">agreement.resiliation.tree</field>
        <field name="model">agreement.resiliation</field>
        <field name="arch" type="xml">
            <tree string="Motif de résiliation">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_agreement_resiliation_kanban" model="ir.ui.view">
        <field name="name">agreement.resiliation.kanban</field>
        <field name="model">agreement.resiliation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top ">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                
                            </div>
                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_agreement_resiliation_form">
        <field name="name">agreement.resiliation.form</field>
        <field name="model">agreement.resiliation</field>
        <field name="arch" type="xml">
            <form string="Motif de résiliation">
	            <sheet>
	                <group>
	                    <group>
	                        <field name="name" required="1"/>
	                    </group>
	                 </group>
	                    
	                    
	            </sheet>
            </form>
        </field>
    </record>
    
    <record id="agreement_resiliation_action" model="ir.actions.act_window">
        <field name="name">Motif de résiliation</field>
        <field name="res_model">agreement.resiliation</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    

     

    </data>
</odoo>
