<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
        <!-- Process medecin  -->

        <record model="ir.ui.view" id="view_process_medecin_tree">
            <field name="name">process.medecin.tree</field>
            <field name="model">process.medecin</field>
            <field name="arch" type="xml">
                <tree  string="Feuille de présence mensuelle" >
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="medecin_id" />
                    <field name="type_medecin_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="process_medecin_search_view" model="ir.ui.view">
            <field name="name">process.medecin.search</field>
            <field name="model">process.medecin</field>
            <field name="arch" type="xml">
                <search string="Feuille de présence mensuelle">
                    <field name="name" />
                    <field name="medecin_id" />
                    <field name="state" />
                    <group expand="0" string="Grouper par...">
                       
                         <filter string="Référence" name="name" domain="[]" context="{'group_by':'name'}"/> 
                        <filter string="Médecin" name="médecin" domain="[]" context="{'group_by':'medecin_id'}"/>
                        <filter string="Status" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_process_medecin_kanban" model="ir.ui.view">
            <field name="name">process.medecin.kanban</field>
            <field name="model">process.medecin</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top ">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>

                                </div>
                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="view_process_medecin_form">
            <field name="name">process.medecin.form</field>
            <field name="model">process.medecin</field>
            <field name="arch" type="xml">
                <form string="Feuille de présence mensuelle" duplicate="0">
                    <style>
                        .text_value_color {color: red;}
                    </style>
                    <header>
                          <button name="btn_open" string="Démarrer la saisie" icon="fa-edit" class="btn-primary"
                                type="object"  attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                                         
                         <button name="btn_confirm" string="Confirmer" icon="fa-check" class="btn-success"
                                type="object"  attrs="{'invisible': [('state', '!=', 'in_progress')]}"/> 
                       
                          <button name="btn_anuuler" string="Annuler" icon="fa-ban" class="btn-danger"
                                type="object"  attrs="{'invisible': [('state', '!=', 'in_progress')]}"/> 
                                
                            <button name="btn_ajouter" string="Créer note d'honoraires" icon="fa-plus" class="btn-success"
                                type="object"  attrs="{'invisible': ['|',('state', '!=', 'done'),('move_id','!=',False)]}"/>          
                       
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done" />
                    </header>
                    <sheet>
                        <group>
                            <group string="Médecin / Vacataires">
                                <field name="name" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                                <field name="medecin_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'  domain="['|',('is_medecin','=',True),('is_vacataires','=',True)]" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                                <field name="type_medecin_id" widget="selection" readonly="1"/>

                            </group>
                          
                            <group string="Durée">
                                <field name="date_start" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                                <field name="date_end" required="1" attrs="{'readonly': [('state', '!=','draft')]}"/>
                            </group>

                        </group>
                        <group string="note d'honoraires" attrs="{'invisible': [('state', '!=', 'done')]}" >
                         <group>
                            <field name="move_id" readonly="1" />
                         </group>
                        </group>
                        <notebook>
                            <page string="Lignes de feuille de présence" attrs="{'invisible': [('state', '=', 'draft')]}" >
                                <field name="line_ids"
                                       widget="section_and_note_one2many"
                                       mode="tree"
                                       attrs="{'readonly': [('state','!=','in_progress')] }">
                                    <tree string="Lignes de feuille de présence" >
                                        <field name="date"  required="1" />
                                        <field name="emargement"/>
                                        <field name="nbre_malade"/>
                                        <field name="nbre_vacation" class="text_value_color"/>
                                    </tree>
                                    <form string="Lignes de feuille de présence">
                                      <sheet>
                                        <group>
                                        <group>
                                            <field name="date"   required="1" />
                                            <field name="medecin_id"  options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'  readonly="1" />
                                            <field name="type_medecin_id" widget="selection" readonly="1" />
                                            <field name="sans_malade" />
                                          </group>
                                           <group>
                                                   <field name="company_id" widget="selection" readonly="1" />
                                                  <field name="emargement"  required="1"/>
                                                  
                                           </group>
                                        </group>
                                        <notebook>
                                          <page string="Détails" attrs="{'invisible':[('sans_malade','!=',False)]}">
                                             <field name="details_ids">
                                               <tree editable="bottom">
                                                   <field name="sequence" widget="handle" />
                                                   <field name="adherent_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'  required="1" 
                                                   		  domain="[('type_partner','=','conventionne'),('type_conventionne','=','physique'),('parent_id','=',False)]" />
                                                   <field name="matricule" readonly="1" />
                                                   <field name="adherant_child_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'  required="1" />
                                               
                                               </tree>
                                               <form>
                                               <sheet>
                                                 <group>
                                                    <group>
                                                    <field name="adherent_id" domain="[('type_partner','=','conventionne'),('type_conventionne','=','physique')]" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'  required="1" />
                                                   <field name="matricule" readonly="1" />
                                                   <field name="adherant_child_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'  required="1" />
                                               
                                                    
                                                    </group>
                                                 
                                                 </group>
                                                 
                                               </sheet>
                                               
                                               
                                               </form>
                                             
                                             </field>
                                             <group class="oe_subtotal_footer" style="border: 1px solid black;background-color: #e9e6e6;" >
			                                    <field name="nbre_malade"  class="text_value_color"/>
			                                    <field name="nbre_vacation" class="text_value_color"/>
			                                </group>
                                          </page>
                                         
                                        </notebook>
                                        </sheet>
                                    </form>

                                </field>
                                <div class="oe_clear"/>
                                <group class="oe_subtotal_footer" style="border: 1px solid black; background-color: #e9e6e6;" >
                                    <field name="nbre_malade"  class="text_value_color"/>
                                    <field name="nbre_vacation" class="text_value_color"/>

                                </group>
                            </page>

                           
                            <page string="Piéce jointes">
                                <field name="attachment_ids" required="1" widget="many2many_binary"/>
                            </page>
                            <page string="Autre information">
                                <group>
                                    <group>

                                        <field name="request_date" readonly="1" />
                                        <field name="user_id" readonly="1" />
                                        <field name="company_id" widget="selection" readonly="1" />
                                    </group>
                                </group>
                            </page>

                        </notebook>


                    </sheet>
                     <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers"/>
              <field name="activity_ids" widget="mail_activity"/>
              <field name="message_ids" widget="mail_thread"/>
            </div>
                </form>
            </field>
        </record>

        <record id="process_medecin_action" model="ir.actions.act_window">
            <field name="name">Feuille de présence mensuelle</field>
            <field name="res_model">process.medecin</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>




    </data>
</odoo>


