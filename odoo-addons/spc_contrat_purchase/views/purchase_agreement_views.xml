<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_purchase_agreement_form">
			<field name="name">purchase.agreement.form</field>
			<field name="model">purchase.agreement</field>
			<field name="arch" type="xml">
				<form string="Contrat de convention">
					<style>
						.text_value_color {color: red;}
					</style>
					<header>
					  <button name="print_convention" string="Imprimer le contrat de convention" type="object"
					   states="confirm,done,end" class="btn-success" icon="fa-print"/>
						<button name="validate_agreement" states="draft"
							string="Confirmer" type="object" icon="fa-check"
							class="btn-primary" />
						<button name="done_agreement" states="confirm"
							string="Signature de convention" type="object" icon="fa-check"
							class="btn-primary" />
						<button name="cancel_agreement" states="draft,confirm"
							string="Annuler" type="object" icon="fa-ban" class="btn-primary" />
					  
					  		
						<button
							name="%(spc_contrat_purchase.action_resiliation_wizard)d"
							states="done" string="Résiliation" type="action" icon="fa-ban"
							class="btn-danger" />
					  
					  <button name="print_resiliation" string="Imprimer résiliation de convention" type="object"
					   states="end" class="btn-danger" icon="fa-print"/>
							
						<field name="state" widget="statusbar"
							statusbar_visible="draft,confirm,done" />
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="open_convetion_pdf" type="object" states="confirm,done"
								class="oe_stat_button" icon="fa-file-pdf-o"
								string="Convention en pdf">

							</button>
						</div>

						<widget name="web_ribbon" title="Annuler"
							bg_color="bg-danger"
							attrs="{'invisible': [('state', '!=', 'cancel')]}" />
						<widget name="web_ribbon" title="Signé"
							bg_color="bg-success"
							attrs="{'invisible': [('state', '!=', 'done')]}" />
						<widget name="web_ribbon" title="Résiliation"
							bg_color="bg-danger"
							attrs="{'invisible': [('state', '!=', 'end')]}" />

						<div class="float-left">
							<label for="name" class="oe_edit_only oe_inline" />
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group string="Entre les soussignés">

							<group>
								<field name="type_conventionne" invisible="1"
									widget="radio" options="{'horizontal': true}" required="1"
									readonly="1" />
								<field name="partner_id" string="D’une part" readonly="1" />
								<field name="pdg" required="1"
									attrs="{'readonly': [('state', '!=','draft')]}" />
								<field name="date_end" string='Date limite de signature'
									attrs="{'readonly': [('state', '!=','draft')]}" />

							</group>
							<group>
								<label for="vendor_id" string="D'autre part" />
								<div class="o_row">
									<field name="categorie_conventione_id" required="1"
										domain="[('type_conventionne','=',type_conventionne)]"
										attrs="{'readonly': [('state', '!=','draft')]}" />

									<field name="vendor_id" string="D’autre part" required="1"
										domain="[('type_partner','=','conventionne'),('type_conventionne','=',type_conventionne)]"
										 attrs="{'readonly': [('state', '!=','draft')]}" />
							      
							     <!--  <field name="hr_employee_id" string="D’autre part"
									
										attrs="{'required':[('type_conventionne','=','physique')],'invisible':[('type_conventionne','!=','physique')],'readonly': [('state', '!=','draft')]}" /> 			 -->
								</div>

								<field name="matricule"/>

								<field name="contact_id"
									domain="[('parent_id','=',vendor_id)]"
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}" />
								<field name="second_contact_id"
									domain="[('parent_id','=',vendor_id)]"
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}" />

							</group>
						</group>

						<group>
						    <field name="agreement_titre" required="1"
								attrs="{'readonly': [('state', '!=','draft')]}" />
							<field name="agreement_desc" required="1"
								attrs="{'readonly': [('state', '!=','draft')]}" />

						</group>

						<group>
							<group string="Montant de la convention">
								<field name="currency_id" readonly="1"
									attrs="{'readonly': [('state', '!=','draft')]}" />
								<field name="montant_plafond"
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}" />
								<field name="taux" required="1"
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}" />

								<field name="prix_unitaire"/>

							</group>
							<group string="Durée de la convention">
								<field name="date_start_convention" required="1"
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}" />
								<field name="date_end_convention" 
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}" />
								<field name="trial_period" class="text_value_color" />
							</group>

						</group>
						<group string="Résiliation"
							attrs="{'invisible': [('state', '!=','end')]}">
							<group>
								<field name="date_resiliation" />
								<field name="reason_resiliation" />
							</group>

						</group>

						<notebook>

							<page string="Clause du Contrat">
								<field name="article_ids"
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}">
									<tree string="Purchase Agreement Articles">
										<field name="sequence" widget="handle" />
										<field name="article_id" required="1" />
										<field name="description" required="1" />
									</tree>
									<form string="Articles du Contrat">
										<sheet>
											<div class="float-left">
												<label for="sequence" class="oe_edit_only oe_inline" />
												<h1 class="oe_inline">
													<field name="sequence" required="1" />
													:
													<field name="article_id" required="1" />
												</h1>
											</div>

										</sheet>
										<group>
                                            
											<field name="description" required="1" />
										</group>

									</form>
								</field>


							</page>
							<page string="Signature du convention">
								<field name="signature_ids"
									attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}">
									<tree string="Signature" editable="bottom">
										<field name="user_id" required="1"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
										<field name="date_send" required="1" />
										<field name="observation" />
										<field name="signature" readonly="1" />
										<button name="signed" icon="fa-check"
											style="color:green"
											attrs="{'invisible':[('signature','!=','non')]}"
											string="Signé" type="object" help="Signé" />

										<button name="no_signed" icon="fa-ban"
											style="color:red"
											attrs="{'invisible':[('signature','!=','oui')]}"
											string="Non Signé" type="object" help="Non Signé" />
									</tree>
									<form string="Signature">
										<group>
											<group>

												<field name="user_id" required="1" />
												<field name="date_send" required="1" />
												<field name="observation" />
											</group>
											<group>

												<field name="signature" widget="state_selection" />
											</group>
										</group>
									</form>
								</field>

							</page>

							<page string="Piéces jointes">
								<group>
									<field name="attachment_ids" widget="many2many_binary" />
								</group>
							</page>
							<page string="Autres informations">
								<group>
									<group>
									    <field name="origin" attrs="{'readonly': [('state', 'not in',('draft','confirm'))]}"/>
										<field name="request_date" readonly="1" />
										<field name="user_id" readonly="1" />
										
										<field name="company_id" invisible="1" />
									</group>
								</group>
							</page>


						</notebook>
						<separator string="Terms and Conditions" />
						<field name="description"
							attrs="{'readonly': [('state', '=','done')]}" />
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_purchase_agreement_tree">
			<field name="name">purchase.agreement.tree</field>
			<field name="model">purchase.agreement</field>
			<field name="arch" type="xml">
				<tree create="0" delete="0"
					decoration-bf="message_needaction==True"
					decoration-muted="state == 'cancel'"
					decoration-danger="date_end and date_end&lt;current_date"
					string="Contrat de convention">
					<field name="message_needaction" invisible="1" />
					<field name="name" />
					<field name="agreement_titre" />
					<field name="vendor_id" />
					<field name="date_end" />
					<field name="user_id" optional="show" />
					<field name="company_id" groups="base.group_multi_company"
						options="{'no_create': True}" optional="show" />
					<field name="state" optional="show" />
					<field name="activity_exception_decoration"
						widget="activity_exception" />
				</tree>
			</field>
		</record>

		<record id="view_purchase_agreement_kanban" model="ir.ui.view">
			<field name="name">purchase.agreement.kanban</field>
			<field name="model">purchase.agreement</field>
			<field name="arch" type="xml">
				<kanban class="o_kanban_mobile">
					<field name="name" />
					<field name="agreement_titre" />
					<field name="agreement_desc" />
					<field name="state" />
					<field name="user_id" />
					<field name="vendor_id" />
					<field name="montant_plafond" />
					<field name="currency_id" />
					<field name="state" />

					<templates>
						<t t-name="kanban-box">
							<div t-attf-class="oe_kanban_card oe_kanban_global_click">
								<div class="o_kanban_record_top mb16">
									<div class="o_kanban_record_headings mt4">
										<strong class="o_kanban_record_title">
											<span style="color:green">
												<field name="name" />  
											</span>
										</strong>
										<br />
										<strong class="o_kanban_record_title">
											<span>
												<field name="vendor_id"/>
											</span>
										</strong>
										<br />
										<strong class="o_kanban_record_title"
											style="color:blue">
											<field name="montant_plafond" widget="monetary" />
											<field name="currency_id" invisible="1" />
										</strong>
									</div>

									<div class="col-6">


										<strong>
											<field name="agreement_titre" />
										</strong>


									</div>
									<strong style="color:red">
										<field name="date_end" widget="daterange" />
									</strong>
								</div>

								<div class="o_kanban_record_bottom">
									<div class="oe_kanban_bottom_left">
										<strong>
											<field name="state" widget="label_selection"
												options="{'classes': {'draft': 'primary','open':'warning', 'confirm': 'success', 'cancel': 'danger', 'in_progress': 'info',
                                            'done': 'dark', 'end': 'danger'}}" />
										</strong>
									</div>
									<div class="oe_kanban_bottom_right">
										<img
											t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
											t-att-title="record.user_id.value"
											t-att-alt="record.user_id.value"
											class="oe_kanban_avatar float-right" />
									</div>


								</div>

							</div>
						</t>

					</templates>
				</kanban>
			</field>
		</record>



		<record model="ir.actions.act_window"
			id="action_purchase_agreement">
			<field name="name">Contrat de convention</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.agreement</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{}</field>
			<field name="domain">[]</field>
		</record>
		<record model="ir.actions.act_window"
			id="action_purchase_agreement_physique">
			<field name="name">Contrat de convention physique</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.agreement</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{'default_type_conventionne':'physique'}</field>
			<field name="domain">[('type_conventionne','=','physique')]</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Ajout un nouveau contrat de convention physique
				</p>

			</field>
		</record>

		<record model="ir.actions.act_window"
			id="action_purchase_agreement_liberale">
			<field name="name">Contrat de convention libérale</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.agreement</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{'default_type_conventionne':'liberale'}</field>
			<field name="domain">[('type_conventionne','=','liberale')]</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Ajout un nouveau contrat de convention Libérale
				</p>

			</field>
		</record>
		<record model="ir.actions.act_window"
			id="action_purchase_agreement_morale">
			<field name="name">Contrat de convention morale</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.agreement</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{'default_type_conventionne':'morale'}</field>
			<field name="domain">[('type_conventionne','=','morale')]</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Ajout un nouveau contrat de convention morale
				</p>

			</field>
		</record>








	</data>
</odoo>
