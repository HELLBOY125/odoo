</div>

 				
		</t>
		</t>
		</t>
</template>
<template id="external_layout_standard_resiliation">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
         
   <div class="header" >
       <center>
       <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 150px;" alt="Logo"/>
       </center>
       </div>
       
        <div class="o_report_layout_standard"  >
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
        <div class="footer">
        <style>
          div.cls_002{font-family:Times,serif;font-size:18px;color:rgb(0,112,191);font-weight:bold;font-style:gras;text-decoration: none}
        </style>
        
        <center>
	   <div  class="cls_002"><span class="cls_002">       <span t-esc="company.street"/>           </span><span class="cls_002">     <span t-esc="company.email"> </span>       </span>
		</div>
        
        </center>
        
       
</div>
     
        
    </template>



  <record id="paperformat_euro_resiliation" model="report.paperformat">
	      <field name="name">European A4</field>
	      <field name="default" eval="True" />
	      <field name="format">A4</field>
	      <field name="page_height">0</field>
	      <field name="page_width">0</field>
	      <field name="orientation">Portrait</field>
	      <field name="margin_top">25</field>
	      <field name="margin_bottom">20</field>
	      <field name="margin_left">7</field>
	      <field name="margin_right">7</field>
	      <field name="header_line" eval="False" />
	      <field name="header_spacing">25</field>
	      <field name="dpi">90</field>
	    </record>
    
  


 
     <report string="Résiliation de convention"
			 id="report_purchase_agreement_resiliation"
			 model="purchase.agreement"
			 report_type="qweb-pdf"
			 name="spc_contrat_purchase.purchase_agreement_resiliation_report"
			 file="spc_contrat_purchase.purchase_agreement_resiliation_report"
			 paperformat="spc_contrat_purchase.paperformat_euro_resiliation"
			 print_report_name="'Résiliation de convention N° %s' % (object.name)"
			 menu="False" 
            />
</odoo>
