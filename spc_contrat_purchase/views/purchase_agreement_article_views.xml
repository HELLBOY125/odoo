<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
     <!-- Purchase Agreement Article  -->

    <record model="ir.ui.view" id="view_purchase_agreement_article_tree">
        <field name="name">purchase.agreement.article.tree</field>
        <field name="model">purchase.agreement.article</field>
        <field name="arch" type="xml">
            <tree string="Articles du convention">
                <field  name="sequence" widget="handle" />
                <field name="type"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_purchase_agreement_article_kanban" model="ir.ui.view">
        <field name="name">purchase.agreement.article.kanban</field>
        <field name="model">purchase.agreement.article</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="type"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top ">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title"><field name="type"/> : <field name="name"/></strong>
                                </div>
                                
                            </div>
                           <div class="o_kanban_record_bottom">
                                
                                    <strong><field name="description"/></strong>
                              
                                
                            </div>
                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_purchase_agreement_article_form">
        <field name="name">purchase.agreement.article.form</field>
        <field name="model">purchase.agreement.article</field>
        <field name="arch" type="xml">
            <form string="Articles du convention">
	            <sheet>
	                <group>
	                    <group>
	                       <field name="type" widget="radio" options="{'horizontal': true}"  required="1"/>
	                        <field name="name" required="1"/>
	                    </group>
	                 </group>
	                    <group>
	                        <field name="description" required="1"/>
	                        
	                    </group>
	                    <group>
	                     <field name="var_article" nolabel="1" readonly="1"/>
	                    </group>
	            </sheet>
            </form>
        </field>
    </record>
    
    <record id="purchase_agreement_article_action" model="ir.actions.act_window">
        <field name="name">Articles du convention</field>
        <field name="res_model">purchase.agreement.article</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    

     

    </data>
</odoo>
