<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       

        
        
         <record id="resiliation_wizard_form_view" model="ir.ui.view">
            <field name="name">resiliation.wizard.form</field>
             <field name="name">Résiliation du convention</field>
            <field name="model">resiliation.wizard</field>
            <field name="arch" type="xml">
                <form string="Résiliation du convention">
                    <group>
                        <field name="date_resiliation" />
                        <field name="reason_resiliation" />
                    </group>
                    <footer>
                        <button name="validate" string="Confirmer" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_resiliation_wizard" model="ir.actions.act_window">
              <field name="name">Résiliation du convention</field>
               <field name="type">ir.actions.act_window</field>
               <field name="res_model">resiliation.wizard</field>
               <field name="view_mode">form</field>
               <field name="context">{'record_id' : active_id}</field>
               <field name="target">new</field>
        </record>
      
    </data>
</odoo>
