<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- [Override existing rules] Start : noupdate value to false -->
        <!-- ********************************************************* -->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'hr'), ('name', '=', 'hr_dept_comp_rule')]"/>
            </function>
            <value eval="{'noupdate': False}" />
        </function>

        <!-- Add manager group to daprtement rule -->
        <record id="hr.hr_dept_comp_rule" model="ir.rule">
            <field name="name">Department multi company rule</field>
            <field name="model_id" ref="hr.model_hr_department"/>
            <field name="global" eval="True"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'hr'), ('name', '=', 'hr_dept_comp_rule')]"/>
            </function>
            <value eval="{'noupdate': True}" />
        </function>
        <!-- ********************************************************* -->
        <!-- [Override existing rules] Stop : noupdate value to True -->

        <!-- Each employee should just see their data -->
        <record model="ir.rule" id="rule_group_hr_user">
            <field name="name">Role Employé fonctionnaire</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>

        <!-- Each employee should just see their department data -->
        <record model="ir.rule" id="rule_group_hr_user_departement">
            <field name="name">Role Employé fonctionnaire - Département</field>
            <field name="model_id" ref="hr.model_hr_department"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="domain_force">[('member_ids.user_id', '=', user.id)]</field>
        </record>

        <!-- Les admins peuvent voir leurs fiches et les autres fiches d'employés -->
        <record model="ir.rule" id="rule_group_hr_manager">
            <field name="name">Role Employé Administrateur</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

    </data>
</odoo>
