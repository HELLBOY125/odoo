<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Passport menu-->
        <record id="action_hr_passports" model="ir.actions.act_window">
            <field name="name">Passeports</field>
            <field name="res_model">hr.passport</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
        <menuitem id="passports_menu_id" name="Passeports" action="action_hr_passports" sequence="1" parent="passportsand_visas_menu_id"/>

        <!--Passport form view -->
        <record model="ir.ui.view" id="hr_passport_view_form">
            <field name="name">passport.form</field>
            <field name="model">hr.passport</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="show_state" invisible="1"/>
                        <div class="badge-pill badge-danger float-right" attrs="{'invisible': ['|', ('show_state', '=', False),('state', '=', 'valide')]}">
                            <field name="state"/>
                        </div>
                        <div class="badge-pill badge-success float-right" attrs="{'invisible': ['|', ('show_state', '=', False),('state', '=', 'expired')]}">
                            <field name="state"/>
                        </div>
                        <group>
                            <separator string="Passeport" colspan="2"/>
                            <group colspan="2" col="2">
                                <field name="employee_id"/>
                                <field name="name"/>
                                <field name="attachments_ids"  widget="many2many_binary"/>
                                <field name="date_delivrance"/>
                                <field name="date_expiration"/>
                                <field name="country_id"/>
                                <field name="visa_ids" context="{'default_employee_id': employee_id}">
                                    <form>
                                        <sheet>
                                            <!--                                            <div class="badge-pill badge-danger float-right" attrs="{'invisible': ['&amp;', ('date_fin', '=', False), ('state', '=', 'valide')]}">-->
                                            <!--                                                <field name="state"/>-->
                                            <!--                                            </div>-->
                                            <!--                                            <div class="badge-pill badge-success float-right" attrs="{'invisible': ['&amp;', ('date_fin', '=', False), ('state', '=', 'expired')]}">-->
                                            <!--                                                <field name="state"/>-->
                                            <!--                                            </div>-->

                                            <group>
                                                <field name="employee_id" readonly="True" force_save="1"/>
                                                <field name="passport_id" required="0" invisible="1"/>
                                                <field name="name"/>
                                                <field name="country_id"/>
                                                <field name="type_visa_id"/>
                                                <field name="date_debut"/>
                                                <field name="date_fin"/>
                                            </group>
                                        </sheet>
                                        <div class="oe_chatter">
                                            <field name="message_follower_ids" widget="mail_followers"/>
                                            <field name="activity_ids" widget="mail_activity"/>
                                            <field name="message_ids" widget="mail_thread"/>
                                        </div>
                                    </form>
                                    <tree>
                                        <!--                                        <field name="employee_id" invisible="1"/>-->
                                        <!--                                        <field name="passport_id" invisible="1"/>-->
                                        <field name="name"/>
                                        <field name="country_id"/>
                                        <field name="type_visa_id"/>
                                        <field name="date_debut"/>
                                        <field name="date_fin"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree view Passport-->
        <record model="ir.ui.view" id="hr_passport_view_tree">
            <field name="name">passport.tree</field>
            <field name="model">hr.passport</field>
            <field name="arch" type="xml">
                <tree string="Liste des passeports">
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="date_delivrance"/>
                    <field name="date_expiration"/>
                    <field name="country_id"/>
                    <field name="state" widget="colored_state"/>
                </tree>
            </field>
        </record>
        <!--kanban view Passport-->
        <record id="hr_passports_view_kanban" model="ir.ui.view">
            <field name="name">Passports.kanban</field>
            <field name="model">hr.passport</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit Contract</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <strong class="o_kanban_record_title">
                                            N° Passeport : <field name="name"/></strong>
                                    </div>
                                    <div class="text-muted o_kanban_record_subtitle">
                                        Employé : <field name="employee_id"/>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--Passport form view 2 -->
        <record model="ir.ui.view" id="hr_passport_view_form_2">
            <field name="name">passport.form</field>
            <field name="model">hr.passport</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="show_state" invisible="1"/>
                        <div class="badge-pill badge-danger float-right" attrs="{'invisible': ['|', ('show_state', '=', False),('state', '=', 'valide')]}">
                            <field name="state"/>
                        </div>
                        <div class="badge-pill badge-success float-right" attrs="{'invisible': ['|', ('show_state', '=', False),('state', '=', 'expired')]}">
                            <field name="state"/>
                        </div>
                        <group>
                            <separator string="Passeport" colspan="2"/>
                            <group colspan="2" col="2">
                                <field name="employee_id" readonly="1" force_save="1"/>
                                <field name="name"/>
                                <field name="attachments_ids" widget="many2many_binary"/>
                                <field name="date_delivrance"/>
                                <field name="date_expiration"/>
                                <field name="country_id"/>
                                <field name="visa_ids" context="{'default_employee_id': employee_id}">
                                    <form>
                                        <sheet>
                                            <field name="show_state" invisible="1"/>
                                            <div class="badge-pill badge-danger float-right" attrs="{'invisible': ['|', ('show_state', '=', False), ('state', '=', 'valide')]}">
                                                <field name="state"/>
                                            </div>
                                            <div class="badge-pill badge-success float-right" attrs="{'invisible': ['|', ('show_state', '=', False), ('state', '=', 'expired')]}">
                                                <field name="state"/>
                                            </div>
                                            <group>
                                                <field name="employee_id" readonly="True" force_save="1"/>
                                                <field name="passport_id" required="0" invisible="1"/>
                                                <field name="name"/>
                                                <field name="country_id"/>
                                                <field name="type_visa_id"/>
                                                <field name="date_debut"/>
                                                <field name="date_fin"/>
                                            </group>
                                        </sheet>
                                    </form>
                                    <tree style="width:100%%">
                                        <field name="employee_id" invisible="1"/>
                                        <field name="passport_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="country_id"/>
                                        <field name="type_visa_id"/>
                                        <field name="date_debut"/>
                                        <field name="date_fin"/>
                                        <field name="state" widget="colored_state"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                    <footer>
                        <button string="Sauvegarder et fermer" name="save_passport_close" class="btn-primary" special="save"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>