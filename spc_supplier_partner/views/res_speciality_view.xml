<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
     <!-- speciality  -->

    <record model="ir.ui.view" id="view_res_speciality_tree">
        <field name="name">res.speciality.tree</field>
        <field name="model">res.speciality</field>
        <field name="arch" type="xml">
            <tree string="Spécialité">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_res_speciality_kanban" model="ir.ui.view">
        <field name="name">res.speciality.kanban</field>
        <field name="model">res.speciality</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top ">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                
                            </div>
                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_res_speciality_form">
        <field name="name">res.speciality.form</field>
        <field name="model">res.speciality</field>
        <field name="arch" type="xml">
            <form string="Spécialité">
	            <sheet>
	                <group>
	                    <group>
	                        <field  name="name"  required="1" />
	                    </group>
	                 </group>
	                    
	            </sheet>
            </form>
        </field>
    </record>
    
    <record id="res_speciality_action" model="ir.actions.act_window">
        <field name="name">Spécialité</field>
        <field name="res_model">res.speciality</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    
   
            
            
      <menuitem
            id="menu_speciality_root"
            name="Spécialité"
            action="res_speciality_action"
            parent="contacts.res_partner_menu_config"
            sequence="2"/>       
     

    </data>
</odoo>
