        <record model="ir.ui.view" id="update_hr_contract_hr_contract_view_form">
            <field name="name">Contrats</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">

<!--                <xpath expr="//field[@name='employee_id']" position="after">-->
<!--                    <field name="type_id" domain="['|',('company_id', '=' , company_id),('company_id', '=' ,False)]"/>-->
<!--                </xpath>-->

                <xpath expr="//field[@name='job_id']" position="before">
                    <field name="department_id" position="move"/>
                </xpath>

                <xpath expr="//field[@name='date_start']" position="before">
                    <field name="date_embauche"/>
                </xpath>

                <xpath expr="//page[@name='other']/group/group" position="attributes">
                    <attribute name="string"></attribute>
                </xpath>

                <xpath expr="//page[@name='other']/group/group" position="after">
                    <group string="">
                        <field name="date_depart"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name='date_depart']" position="before">
                    <field name="trial_date_end" position="move"/>
                </xpath>

                <xpath expr="//page[@name='other']/group" position="attributes">
                    <attribute name="string">Conditions du contrat</attribute>
                </xpath>

                <!-- hide the span inside "date_end" div to get the correct   -->
                <xpath expr="//page[@name='other']/group/group/div/span" position="replace"/>

                <xpath expr="//page[@name='information']" position="after">
                    <page name="job_description" string="Fonction et attributions">
                        <field name="description_job"/>
                    </page>
                </xpath>

            </field>
        </record>

