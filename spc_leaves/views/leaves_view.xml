        <record id="action_outgoing_to_request" model="ir.actions.act_window">
            <field name="name">Outgoing Authorization</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave</field>

            <field name="view_mode">tree,kanban,form,calendar,activity</field>
            <field name="search_view_id" ref="view_hr_holidays_filter_outgoing"/>
            <field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree', 'view_id': ref('spc_leaves.outgoing_authorization_view_tree')}),
		(0, 0, {'view_mode': 'form', 'view_id': ref('spc_leaves.hr_leave_view_outgoing_authorization_manager_form')})]"
            />
            <field name="domain">[("is_outgoing","=",True)]</field>
            <field name="context">
                { 'default_is_outgoing':True}
            </field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new outgoing authorization request
                </p>
            </field>
        </record>
        <record id="action_outgoing_to_approve" model="ir.actions.act_window">
            <field name="name">Outgoing Authorization</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave</field>

            <field name="view_mode">tree,kanban,form,calendar,activity</field>
            <field name="search_view_id" ref="view_hr_holidays_filter_outgoing"/>
            <field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree', 'view_id': ref('spc_leaves.outgoing_authorization_view_approve_tree')}),
		(0, 0, {'view_mode': 'form', 'view_id': ref('spc_leaves.hr_leave_view_outgoing_authorization_manager_approve_form')})]"
            />
            <field name="domain">[("is_outgoing","=",True)]</field>
            <field name="context">
                { 'default_is_outgoing':True,
                'search_default_approved':1
