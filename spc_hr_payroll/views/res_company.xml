<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="base_view_company_form_inherit">
            <field name="name">Config : Sociétés</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='social_media']" position="before">
                    <group name="other_infos" string="Autres infos">
                        <field name="convention_id"/>
                        <field name="plafond_security"/>
                        <field name="nbr_employee"/>
                        <field name="cotisation_prevoyance"/>
                        <field name="org_security_social"/>
                        <field name="code_exploitation"/>
                        <field name="bureau_regional"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>

</odoo>